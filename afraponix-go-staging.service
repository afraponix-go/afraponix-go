[Unit]
Description=Afraponix Go Aquaponics Management System - STAGING
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/aquaponics-app-staging
Environment=NODE_ENV=staging
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=afraponix-go-staging

[Install]
WantedBy=multi-user.target