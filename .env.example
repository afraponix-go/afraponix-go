# Environment Configuration
NODE_ENV=development

# Database Configuration
# For SQLite (development)
DB_NAME=aquaponics.db

# For MariaDB/MySQL (production)
DB_HOST=localhost
DB_PORT=3306
DB_USER=aquaponics
