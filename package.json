{
  "name": "afraponix-go",
  "version": "4.0.0",
  "description": "Complete aquaponics management system with enhanced plant tracking, water quality monitoring, and comprehensive farm management tools",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "dotenv -e .env.dev -- nodemon server.js",
    "dev:db:up": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:db:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:db:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d",
    "dev:setup": "npm run dev:db:up && echo 'Waiting for database...' && sleep 10 && npm run dev",
    "staging": "NODE_ENV=staging node server.js",
    "client": "python3 -m http.server 8000"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "dotenv": "^17.2.1",
    "dotenv-cli": "^7.4.4",
    "nodemon": "^3.1.10"
  },
  "keywords": [
    "aquaponics",
    "monitoring",
    "agriculture",
    "fish",
    "plants",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT"
}
